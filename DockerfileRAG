# Dockerfile (en la raíz del repo)
# ------------------------------------------------------------
FROM python:3.11-slim

LABEL maintainer="you@domain.com" \
      version="1.0.0"

ENV DEBIAN_FRONTEND=noninteractive

ARG OLLAMA_URL=http://localhost:11434
ARG QDRANT_URL=http://localhost:6333

# 1) Dependencias del sistema
RUN apt-get update && apt-get install -y --no-install-recommends \
      build-essential \
      curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# 2) Instala dependencias Python
COPY app/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 3) Copia el código de la app
COPY app/ ./app

# 4) Crea usuario no-root para correr el servicio
RUN useradd -ms /bin/bash appuser
USER appuser

# 5) Healthcheck
HEALTHCHECK --interval=30s --timeout=5s --retries=3 \
  CMD curl -f http://localhost:5000/health || exit 1

EXPOSE 5000

# 6) Inicio del server
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "5000"]
